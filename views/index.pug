doctype html 
html 
    head
        title Articles
    body 
        h1 Pug Engine - View Articles
        br
        br
        p #{title}
        br
        p #{description}
        br
        ul
            each article, i in articles
                li
                    a(href='/articles/'+article._id)=article.body 
        
        a(href="/articles/add") 
            button Add Articles